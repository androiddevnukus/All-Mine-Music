<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">


    <fragment
        android:id="@+id/splashFragment"
        android:name="uz.project.musicplayer.presenter.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/splash_fragment" />
    <fragment
        android:id="@+id/mainPage"
        android:name="uz.project.musicplayer.presenter.main.MainPage"
        android:label="page_main"
        tools:layout="@layout/page_main" />
    <fragment
        android:id="@+id/musicPage"
        android:name="uz.project.musicplayer.presenter.music.MusicPage"
        android:label="page_music"
        tools:layout="@layout/page_music" />
    <action
        android:id="@+id/action_global_mainPage"
        app:destination="@id/mainPage" />
    <action
        android:id="@+id/action_global_musicPage"
        app:destination="@id/musicPage" />
</navigation>